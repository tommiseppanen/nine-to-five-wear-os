<?xml version="1.0" encoding="utf-8"?>
<android.support.wear.widget.BoxInsetLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/dark_grey"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        tools:deviceIds="wear"
        android:padding="@dimen/box_inset_layout_padding" app:boxedEdges="left|right"
        android:backgroundTint="@color/black">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/inner_frame_layout_padding"
            app:boxedEdges="left|right">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">
                <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/weekday"
                        android:textAppearance="@android:style/TextAppearance.Material.Small"
                        android:textAlignment="center"
                        android:layout_height="wrap_content" android:gravity="center" android:textStyle="normal"
                        android:paddingTop="5dp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/normalTime"
                        android:textAlignment="center" android:textStyle="bold" android:textSize="16sp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/timeTarget"
                        android:textAlignment="center" android:textStyle="bold" android:textSize="16sp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/timeTarget2"
                        android:textAlignment="center" android:textStyle="bold" android:textSize="16sp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/days" android:textAlignment="center"
                        android:paddingTop="5dp" android:textColor="@color/blue"/>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</android.support.wear.widget.BoxInsetLayout>